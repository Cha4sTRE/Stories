<title>panel de control</title>

<div class="container p-3">
  <div class="row">
  <div class="col-md-4">
    <div class="card">
      <div class="card-body">
        <form action="/images/add" method="POST" enctype="multipart/form-data">
          <div class="form-group mb-3">
            <input type="text" name="title" class="form-control" placeholder="titulo">
          </div>
          <div class="form-group mb-3">
            <textarea name="description" class="form-control" placeholder="descripcion"></textarea>
          </div>
          <div class="input-group mb-3">
            <div class="custom-file">
              <input type="file" name="image" class="form-control" id="inputGroupFile01">
              <label for="inputGroupFile01" class="form-label"></label>
            </div>
          </div>
          <button class="btn btn-primary">subir</button>
        </form>
      </div>
    </div>
  </div>
  <div class="col-md-8">
  <table class="table">
    <thead>
      <th>title</th>
      <th>description</th>
      <th>opciones</th>
    </thead>
    <tbody>
      {{#each photos}}
      <tr>
        <td>{{title}}</td>
        <td>{{description}}</td>
        <td>
          <a href="{{imageURL}}" target="_blank"class="btn btn-primary">ver</a>
          <a href="/images/delete/{{_id}}"class="btn btn-danger">eliminar</a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
</div>
</div>

